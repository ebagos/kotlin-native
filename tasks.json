{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "taskName": "kotlinc",
            "type": "shell",
            "command": "kotlinc",
            "args": [
                "${file}", "-include-runtime", "-d", "${fileBasenameNoExtension}.jar"
            ],
            "presentation": {
                "reveal": "always"
            }
        },
        {
            "taskName": "execjar",
            "command": "java",
            "type": "shell",
            "args": [
                "-jar", "${fileBasenameNoExtension}.jar"
            ],
            "presentation": {
                "reveal": "always"
            }
        }
    ]
}